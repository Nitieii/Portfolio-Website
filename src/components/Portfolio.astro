            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7" />
          </svg>
        </a>
      </div>
    </div>

    <!-- M&A Asia -->
    <div class="group relative overflow-hidden rounded-lg bg-card">
      <div class="aspect-video overflow-hidden">
        <img
          src="/img/MNA.png"
          alt="M&A Asia"
          class="object-cover w-full h-full transform transition-transform duration-500 group-hover:scale-110"
        />
      </div>
      <div class="p-6">
        <h3 class="text-xl font-bold mb-2">M&A Asia</h3>
        <p class="text-gray-500 dark:text-gray-400 mb-4">
          Platform for M&A deals, contact management, and DD procedure pipeline management in Asia.
        </p>
        <a
          href="https://www.mna.asia/"
          target="_blank"
          rel="noopener noreferrer"
          class="inline-flex items-center text-primary hover:underline"
        >
          View Project
          <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4 ml-1" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7" />
          </svg>
        </a>
      </div>
    </div>
  </div>
</section>
