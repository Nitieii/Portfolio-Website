---
import { ModeToggle } from "./ModeToggle";
import { MobileMenu } from "./MobileMenu";
---

<header class="fixed top-0 left-0 w-full bg-background/95 backdrop-blur supports-[backdrop-filter]:bg-background/60 z-50 border-b">
  <nav class="container flex h-14 items-center justify-between">
    <div class="flex items-center gap-6">
      <a href="/" class="flex items-center space-x-2">
        <span class="font-bold sm:inline-block">Tuan Anh</span>
      </a>

      <div class="hidden md:flex gap-6">
        <a href="#home" class="text-sm font-medium transition-colors hover:text-primary">
          Home
        </a>
        <a href="#about" class="text-sm font-medium transition-colors hover:text-primary">
          About
        </a>
        <a href="#skills" class="text-sm font-medium transition-colors hover:text-primary">
          Skills
        </a>
        <a href="#qualification" class="text-sm font-medium transition-colors hover:text-primary">
          Qualification
        </a>
        <a href="#services" class="text-sm font-medium transition-colors hover:text-primary">
          Services
        </a>
        <a href="#portfolio" class="text-sm font-medium transition-colors hover:text-primary">
          Portfolio
        </a>
        <a href="#contact" class="text-sm font-medium transition-colors hover:text-primary">
          Contact
        </a>
      </div>
    </div>

    <div class="flex items-center gap-4">
      <ModeToggle client:load />
      <MobileMenu client:load />
    </div>
  </nav>
</header>
