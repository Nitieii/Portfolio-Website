---
import { Image } from "astro:assets";
import TechIcons from "./TechIcons.astro";
---

<section
  id="home"
  class="container relative flex flex-col items-center justify-center min-h-screen py-24"
>
  <!-- Decorative Elements -->
  <div class="absolute inset-0 overflow-hidden pointer-events-none">
    <!-- Animated circles -->
    <div
      class="absolute top-1/4 left-10 w-64 h-64 bg-primary/5 rounded-full mix-blend-multiply filter blur-xl animate-blob"
    >
    </div>
    <div
      class="absolute top-1/3 right-10 w-64 h-64 bg-primary/10 rounded-full mix-blend-multiply filter blur-xl animate-blob animation-delay-2000"
    >
    </div>
    <div
      class="absolute bottom-1/4 left-20 w-64 h-64 bg-primary/5 rounded-full mix-blend-multiply filter blur-xl animate-blob animation-delay-4000"
    >
    </div>

    <!-- Geometric shapes -->
    <div
      class="absolute top-20 left-1/4 w-8 h-8 border-2 border-primary/30 rounded-lg rotate-45 animate-float"
    >
    </div>
    <div
      class="absolute bottom-32 right-1/4 w-6 h-6 border-2 border-primary/30 animate-float animation-delay-2000"
    >
    </div>
    <div
      class="absolute top-1/3 right-20 w-4 h-4 bg-primary/20 rounded-full animate-float animation-delay-1000"
    >
    </div>
  </div>

  <div class="flex flex-col md:flex-row items-center gap-12 z-10">
    <!-- Text Content -->
    <div
      class="flex flex-col items-center md:items-start gap-4 text-center md:text-left flex-1"
    >
      <div class="space-y-2">
        <h1
          class="text-4xl font-bold tracking-tighter sm:text-5xl md:text-6xl lg:text-7xl opacity-0 animate-on-scroll"
        >
          Hi, I'm <span class="text-primary">Tuan Anh</span>
        </h1>
        <p
          class="mx-auto md:mx-0 max-w-[700px] text-gray-500 md:text-xl dark:text-gray-400 opacity-0 animate-on-scroll delay-200"
        >
          Co-founder & CEO @ TECHTACK - Legal AI Solutions | Full-stack
          Developer | UWC Alumni
        </p>
      </div>
      <div class="flex gap-4 opacity-0 animate-on-scroll delay-400">
        <a
          href="#contact"
          class="inline-flex h-10 items-center justify-center rounded-md bg-primary px-8 text-sm font-medium text-primary-foreground shadow transition-colors hover:bg-primary/90 focus-visible:outline-none focus-visible:ring-1 focus-visible:ring-primary disabled:pointer-events-none disabled:opacity-50"
        >
          Let's Collaborate
        </a>
        <a
          href="assets/pdf/Resume.pdf"
          class="inline-flex h-10 items-center justify-center rounded-md border border-input bg-background px-8 text-sm font-medium shadow-sm transition-colors hover:bg-accent hover:text-accent-foreground focus-visible:outline-none focus-visible:ring-1 focus-visible:ring-ring disabled:pointer-events-none disabled:opacity-50"
          download
        >
          Download CV
        </a>
      </div>
    </div>

    <!-- Profile Image with 3D effect -->
    <div
      class="relative w-64 h-64 md:w-80 md:h-80 opacity-0 animate-on-scroll-right delay-200"
    >
      <div
        class="absolute inset-0 rounded-full bg-gradient-to-br from-primary/20 to-primary/5 animate-pulse"
      >
      </div>
      <img
        src="/img/profile.png"
        alt="Tuan Anh"
        class="relative z-10 w-full h-full object-cover rounded-full border-2 border-primary/20 p-2 transform transition-transform duration-500 hover:scale-105"
      />
      <!-- Tech stack icons floating around -->
      <div
        class="absolute -top-8 right-1/2 w-12 h-12 bg-white dark:bg-gray-800 rounded-full shadow-lg flex items-center justify-center animate-float"
      >
        <img
          src="/img/programming-icons/react.svg"
          alt="React"
          class="w-8 h-8"
        />
      </div>
      <div
        class="absolute -top-4 -right-4 w-12 h-12 bg-white dark:bg-gray-800 rounded-full shadow-lg flex items-center justify-center animate-float animation-delay-500"
      >
        <img
          src="/img/programming-icons/node.svg"
          alt="Node.js"
          class="w-8 h-8"
        />
      </div>
      <div
        class="absolute top-1/2 -right-8 w-12 h-12 bg-white dark:bg-gray-800 rounded-full shadow-lg flex items-center justify-center animate-float animation-delay-1000"
      >
        <img
          src="/img/programming-icons/python.svg"
          alt="Python"
          class="w-8 h-8"
        />
      </div>
      <div
        class="absolute -bottom-4 -right-4 w-12 h-12 bg-white dark:bg-gray-800 rounded-full shadow-lg flex items-center justify-center animate-float animation-delay-1500"
      >
        <img src="/img/programming-icons/go.svg" alt="Golang" class="w-8 h-8" />
      </div>
      <div
        class="absolute -bottom-8 right-1/2 w-12 h-12 bg-white dark:bg-gray-800 rounded-full shadow-lg flex items-center justify-center animate-float animation-delay-2000"
      >
        <img src="/img/programming-icons/java.svg" alt="Java" class="w-8 h-8" />
      </div>
      <div
        class="absolute top-1/2 -left-8 w-12 h-12 bg-white dark:bg-gray-800 rounded-full shadow-lg flex items-center justify-center animate-float animation-delay-2500"
      >
        <img
          src="/img/programming-icons/figma.svg"
          alt="Figma"
          class="w-8 h-8"
        />
      </div>
    </div>
  </div>

  <!-- Social Links -->
  <div
    class="flex justify-center space-x-4 mt-8 opacity-0 animate-on-scroll delay-600"
  >
    <a
      href="https://www.linkedin.com/in/ngo-tuan-anh-956991135/"
      target="_blank"
      rel="noopener noreferrer"
      class="text-gray-500 hover:text-primary transition-colors"
    >
      <svg
        class="h-6 w-6"
        fill="currentColor"
        viewBox="0 0 24 24"
        aria-hidden="true"
      >
        <path
          d="M20.447 20.452h-3.554v-5.569c0-1.328-.027-3.037-1.852-3.037-1.853 0-2.136 1.445-2.136 2.939v5.667H9.351V9h3.414v1.561h.046c.477-.9 1.637-1.85 3.37-1.85 3.601 0 4.267 2.37 4.267 5.455v6.286zM5.337 7.433c-1.144 0-2.063-.926-2.063-2.065 0-1.138.92-2.063 2.063-2.063 1.14 0 2.064.925 2.064 2.063 0 1.139-.925 2.065-2.064 2.065zm1.782 13.019H3.555V9h3.564v11.452zM22.225 0H1.771C.792 0 0 .774 0 1.729v20.542C0 23.227.792 24 1.771 24h20.451C23.2 24 24 23.227 24 22.271V1.729C24 .774 23.2 0 22.222 0h.003z"
        ></path>
      </svg>
    </a>
    <a
      href="https://www.facebook.com/tuananh.ngo0108/"
      target="_blank"
      rel="noopener noreferrer"
      class="text-gray-500 hover:text-primary transition-colors"
    >
      <svg
        class="h-6 w-6"
        fill="currentColor"
        viewBox="0 0 24 24"
        aria-hidden="true"
      >
        <path
          d="M24 12.073c0-6.627-5.373-12-12-12s-12 5.373-12 12c0 5.99 4.388 10.954 10.125 11.854v-8.385H7.078v-3.47h3.047V9.43c0-3.007 1.792-4.669 4.533-4.669 1.312 0 2.686.235 2.686.235v2.953H15.83c-1.491 0-1.956.925-1.956 1.874v2.25h3.328l-.532 3.47h-2.796v8.385C19.612 23.027 24 18.062 24 12.073z"
        ></path>
      </svg>
    </a>
    <a
      href="https://github.com/Nitieii"
      target="_blank"
      rel="noopener noreferrer"
      class="text-gray-500 hover:text-primary transition-colors"
    >
      <svg
        class="h-6 w-6"
        fill="currentColor"
        viewBox="0 0 24 24"
        aria-hidden="true"
      >
        <path
          d="M12 .297c-6.63 0-12 5.373-12 12 0 5.303 3.438 9.8 8.205 11.385.6.113.82-.258.82-.577 0-.285-.01-1.04-.015-2.04-3.338.724-4.042-1.61-4.042-1.61C4.422 18.07 3.633 17.7 3.633 17.7c-1.087-.744.084-.729.084-.729 1.205.084 1.838 1.236 1.838 1.236 1.07 1.835 2.809 1.305 3.495.998.108-.776.417-1.305.76-1.605-2.665-.3-5.466-1.332-5.466-5.93 0-1.31.465-2.38 1.235-3.22-.135-.303-.54-1.523.105-3.176 0 0 1.005-.322 3.3 1.23.96-.267 1.98-.399 3-.405 1.02.006 2.04.138 3 .405 2.28-1.552 3.285-1.23 3.285-1.23.645 1.653.24 2.873.12 3.176.765.84 1.23 1.91 1.23 3.22 0 4.61-2.805 5.625-5.475 5.92.42.36.81 1.096.81 2.22 0 1.606-.015 2.896-.015 3.286 0 .315.21.69.825.57C20.565 22.092 24 17.592 24 12.297c0-6.627-5.373-12-12-12"
        ></path>
      </svg>
    </a>
  </div>

  <!-- Scroll Down Indicator -->
  <div class="mt-8 animate-bounce opacity-0 animate-on-scroll delay-800">
    <a href="#about" class="text-gray-500 hover:text-primary transition-colors">
      <svg
        class="h-6 w-6"
        fill="none"
        stroke="currentColor"
        viewBox="0 0 24 24"
      >
        <path
          stroke-linecap="round"
          stroke-linejoin="round"
          stroke-width="2"
          d="M19 14l-7 7m0 0l-7-7m7 7V3"></path>
      </svg>
    </a>
  </div>
</section>

<style>
  @keyframes blob {
    0% {
      transform: translate(0px, 0px) scale(1);
    }
    33% {
      transform: translate(30px, -50px) scale(1.1);
    }
    66% {
      transform: translate(-20px, 20px) scale(0.9);
    }
    100% {
      transform: translate(0px, 0px) scale(1);
    }
  }

  @keyframes float {
    0% {
      transform: translateY(0px);
    }
    50% {
      transform: translateY(-10px);
    }
    100% {
      transform: translateY(0px);
    }
  }

  .animate-blob {
    animation: blob 7s infinite;
  }

  .animate-float {
    animation: float 3s ease-in-out infinite;
  }

  .animation-delay-2000 {
    animation-delay: 2s;
  }

  .animation-delay-4000 {
    animation-delay: 4s;
  }

  .animation-delay-1000 {
    animation-delay: 1s;
  }
</style>
